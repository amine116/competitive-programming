#include<bits/stdc++.h>
#define ll long long
#define ull unsigned long long
#define sll signed long long
#define MAX 999999999
 
using namespace std;
int main(){
    ll n; cin >> n;
    if(n == 3) cout << "1 " << "1 " << "1" << endl;
    else if((n - 2)%3 != 0) cout << "1" << " " << "1" << " " << n - 2 << endl;
    else cout << "2 " << "1 " << n - 3 << endl;
    return 0;
}
